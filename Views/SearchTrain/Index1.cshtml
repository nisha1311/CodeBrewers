
@{
    ViewBag.Title = "Index1";
}


<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Holiday - templatemo</title>
    <!--
    Holiday Template
    http://www.templatemo.com/tm-475-holiday
    -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css' />

    <link href="~/UserTemplate/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/UserTemplate/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/UserTemplate/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/UserTemplate/css/flexslider.css" rel="stylesheet" />
    <link href="~/UserTemplate/css/templatemo-style.css" rel="stylesheet" />

    <link href="~/UserTemplate/SearchBox/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/UserTemplate/SearchBox/css/style.css" rel="stylesheet" />

    <link href="~/CSS/fullscreen.css" rel="stylesheet" />
    
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body class="tm-gray-bg">
    <!-- Header -->
    <div class="fullscreen">
        <div class="tm-header">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-4 col-sm-3 tm-site-name-container">
                        <a href="#" class="tm-site-name">Holiday</a>
                    </div>
                    <div class="col-lg-6 col-md-8 col-sm-9">
                        <div class="mobile-menu-icon">
                            <i class="fa fa-bars"></i>
                        </div>
                        <nav class="tm-nav">
                            <ul>
                                <li><a href="index.html" class="active">Home</a></li>
                                <li><a href="about.html">About</a></li>
                                <li><a href="contact.html">Contact</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div id="booking" class="section">
            <div class="section-center">
                <div class="container">
                    <div class="row">
                        <div class="booking-form">
                            <div class="form-header">
                                <h1>Search Your Train</h1>
                            </div>
                            @using (Html.BeginForm("SearchTrain", "SearchTrain", FormMethod.Post))
                            {

                                <div class="form-group">
                                    <input class="form-control" name="boarding_location" id="boardingFormTxtID" type="text" required>
                                    <span class="form-label">Boarding from</span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="drop_location" id="DestinationToTxtID" type="text" required>
                                    <span class="form-label">Destination To </span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input class="form-control" name="boarding_date" id="boardingDateTxtID" type="date" required>
                                            <span class="form-label">Boarding Date</span>
                                        </div>
                                    </div>

                                </div>

                                <div class="form-btn">
                                    <button class="submit-btn" type="submit" @*onclick="SearchTrain()"*@>Check availability</button>
                                </div>
                            }
                            </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="~/UserTemplate/SearchBox/js/jquery.min.js"></script>
        <script>
            $('.form-control').each(function () {
                floatedLabel($(this));
            });

            $('.form-control').on('input', function () {
                floatedLabel($(this));
            });

            function floatedLabel(input) {
                var $field = input.closest('.form-group');
                if (input.val()) {
                    $field.addClass('input-not-empty');
                } else {
                    $field.removeClass('input-not-empty');
                }
            }

            function SearchTrain() {
                var Data = {
                    boarding_location: $("#boardingFormTxtID").val(),
                    drop_location: $("#DestinationToTxtID").val(),
                    boarding_date: $("#boardingDateTxtID").val(),
                };

                $.ajax({
                    type: "Post", url: "../SearchTrain/SearchTrain", dataType: "json", data: JSON.stringify({ data: Data }), contentType: "application/json", success: function (comp) {
                        if (comp == 1) {

                        }
                    }
                });
            }
        </script>

    </div>
</body>
</html>


