                                    <input class="form-control" type="text" required>
                                    <span class="form-label"> Name </span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="number" required>
                                    <span class="form-label"> Moblie Number </span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="email" required>
                                    <span class="form-label"> Email </span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control totalAmountTxtCls" id="totalAmountIDTXTIDd" type="text" value="">
                                    <span class="form-label" > Total Price </span>
                                </div>

                              
                                <div class="form-btn">
                                  
                                    <button class="submit-btn" onclick="getpayment()" id="paymentid">Book Now</button>
                                
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="~/UserTemplate/SearchBox/js/jquery.min.js"></script>
        <script>

                function getpayment() {
                    var id = $("#totalAmountIDTXTIDd").val();
                   @*location.href = "@Url.Action("Index", "Survey", new { id = UrlParameter.Optional })" + "/" + "@Model.CampaignGuid" + "/" + selectedValue*@
                    window.location.href = "/Payment/Index?id=" + id ;
                }



            $('.form-control').each(function () {
                floatedLabel($(this));
            });

            $('.form-control').on('input', function () {
                floatedLabel($(this));
            });

            function floatedLabel(input) {
                var $field = input.closest('.form-group');
                if (input.val()) {
                    $field.addClass('input-not-empty');
                } else {
                    $field.removeClass('input-not-empty');
                }
            }

