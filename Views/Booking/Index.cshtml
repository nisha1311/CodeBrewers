                                <h1>Enter your details to book</h1>
                            </div>
                            <form>

                                <div class="form-group">
                                    <input class="form-control" type="number" id="TrainIDBookingTXT" value="@ViewBag.TrainID" required>
                                    <span class="form-label">Train Number</span>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" @*onkeyup="CheckTotalAmount()"*@ type="number" id="NoofSeatTxtID" required>
                                    <span class="form-label">  Number of Seats </span>
                                </div>
